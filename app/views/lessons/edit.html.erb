<%= form_for [@student, @lesson] , html: { multipart: true } do |f| %>
  <div class="form-group">
    <label>Datum</label>
    <%= f.date_field :date, class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Tijd</label>
    <%= f.time_select :time, class: "form-control" %>
  </div>


  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
