<div class="row">
  <div class="col-md-6">
    <h5><%= @student.name %> / <span>Lessen: <%= @student.lessons.length %></span></h5>
  </div>
  <div class="col-md-6">
    <h5>Betaald: <%= @student.lessons.where(paid: true).length * 30 %> euro </h5>
    <h5>Niet betaald: <%= @student.lessons.where(paid: nil).length %> </h5>
  </div>
</div>
<div class="row">
  <hr>
  <button type="button" class="btn btn-block btn-success" data-toggle="modal" data-target="#exampleModal">
    Nieuwe les
  </button>

  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Nieuwe les</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <%= form_for [@student, @lesson]  do |f| %>
        <div class="modal-body">
          <%= f.label :Datum %>
          <%= f.date_select :date, class: "form-control" %><br><br>
          <%= f.label :Tijd %>
          <%= f.time_select :time, class: "form-control" %><br><br>
          <%= f.label :Betaald %>
          <%= f.radio_button :paid, "Ja", id: "Ja"%>
          <br>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit "Create", class: "btn btn-primary add-pair" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<br>
<br>
<div class="row">

  <table class="table">
  <thead class="thead-inverse">
    <tr>
      <th>Les nummer</th>
      <th>Dag</th>
      <th>Tijd</th>
      <th>Betaald</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @student.lessons.each_with_index do |les, index| %>
    <tr>
      <th scope="row"><%= index + 1 %></th>
      <td><%= les.date %></td>
      <%= les.lessen_betaald %>
      <td><%= les.time.strftime("%H:%M %a") %></td>
      <% if les.paid === nil %>
        <td style="color:red;">Niet betaald</td>
        <td><%= link_to "Betalen", [@student, les, paid: true], method: :patch, class: "btn btn-primary" %></td>
      <% else %>
        <td style="color:lightgrey;">Betaald</td>
      <% end %>
      <td>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

</div>
